asrm.dev {
    encode zstd gzip

    log {
        output stdout
        format console
        level DEBUG
    }

    # --- API primero: strip solo /clinicamv para que Laravel vea /api/... ---
    handle /clinicamv/api* {
        uri strip_prefix /clinicamv
        root * /var/www/public
        php_fastcgi clinicamv-php:9000
    }

    # --- Angular bajo /clinicamv (aquí sí conviene quitar todo el prefijo) ---
    handle_path /clinicamv* {
        reverse_proxy clinicamv-frontend:80
    }

    # --- Estático /presentacion ---
    handle_path /presentacion* {
        root * /srv/presentacion
        file_server
    }

    # --- Web personal raíz ---
    root * /srv/web-personal
    file_server
}

