asrm.dev {
    encode zstd gzip

    log {
        output stdout
        format console
        level DEBUG
    }
    # faltaban caracteres en el patron del matches
    # --- API: que Laravel reciba /api/... ---
    @api {
        path /clinicamv/api /clinicamv/api/*
    }
    handle @api {
        header {
            set X-Caddy-Block api
        }
        uri strip_prefix /clinicamv   # deja /api/...
        root * /var/www/public
        php_fastcgi clinicamv-php:9000
    }

    # --- Angular bajo /clinicamv ---
    handle_path /clinicamv* {
        header {
            set X-Caddy-Block frontend
        }
        reverse_proxy clinicamv-frontend:80
    }

    # --- Estático /presentación ---
    handle_path /presentacion* {
        root * /srv/presentacion
        file_server
    }

    # --- Raíz ---
    root * /srv/web-personal
    file_server
}

