asrm.dev {
    encode zstd gzip

    log {
        output stdout
        format console
        level DEBUG
    }

    # Todo lo de /clinicamv entra aquí (strip del prefijo)
    handle_path /clinicamv* {
        # --- API: /api... -> Laravel ---
        @api path /api*
        handle @api {
            header {
                set X-Caddy-Block api
                set X-Debug-URI {uri}
            }
            root * /var/www/public
            rewrite * /index.php        # <-- forzar el front-controller de Laravel
            php_fastcgi clinicamv-php:9000
        }

        # --- Frontend Angular (catch-all) ---
        handle {
            header {
                set X-Caddy-Block frontend
                set X-Debug-URI {uri}
            }
            reverse_proxy clinicamv-frontend:80
        }
    }

    # Estático /presentación
    handle_path /presentacion* {
        root * /srv/presentacion
        file_server
    }

    # Raíz
    root * /srv/web-personal
    file_server
}
