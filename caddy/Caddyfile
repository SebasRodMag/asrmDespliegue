asrm.dev {
    encode zstd gzip

    log {
        output stdout
        format console
        level DEBUG
    }

    # --- API Laravel: /clinicamv/api... ->
    #     strip solo /clinicamv para que Laravel vea /api/...
    handle /clinicamv/api* {
        header {
            set X-Caddy-Block api
            set X-Debug-URI {uri}
        }
        uri strip_prefix /clinicamv        # /clinicamv/api/... -> /api/...
        root * /var/www/public
        try_files {path} {path}/ /index.php{uri}?{query}   # conserva la URI
        php_fastcgi clinicamv-php:9000
    }

    # --- Frontend Angular (catch-all) ---
    handle_path /clinicamv* {
        header {
            set X-Caddy-Block frontend
            set X-Debug-URI {uri}
        }
        reverse_proxy clinicamv-frontend:80
    }

    # --- Estático /presentacion ---
    handle_path /presentacion* {
        root * /srv/presentacion
        file_server
    }

    # --- Raíz ---
    root * /srv/web-personal
    file_server
}
