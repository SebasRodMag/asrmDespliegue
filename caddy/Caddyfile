asrm.dev {
    encode zstd gzip

    log {
        output stdout
        format console
        level DEBUG
    }

    # --- API Laravel bajo /clinicamv/api ---
    @api path /clinicamv/api /clinicamv/api/*
    handle @api {
        header { set X-Caddy-Block api }
        uri strip_prefix /clinicamv   # Laravel ve /api/...
        root * /var/www/public

        # usando try_files mediante index.php sin {uri}
        try_files {path} {path}/ /index.php
        php_fastcgi clinicamv-php:9000
    }

    # --- Angular bajo /clinicamv ---
    handle_path /clinicamv* {
        header { set X-Caddy-Block frontend }
        reverse_proxy clinicamv-frontend:80
    }

    # --- Estático /presentacion ---
    handle_path /presentacion* {
        root * /srv/presentacion
        file_server
    }

    # --- Raíz ---
    root * /srv/web-personal
    file_server
}
